{
  "name": "mailocity",
  "version": "1.0.0",
  "description": "Email client available on mobile and web",
  "main": "index.js",
  "scripts": {
    "web": "cd web && npm run start",
    "ios": "cd mobile && npm run ios",
    "android": "cd mobile && npm run android",
    "server": "cd server && npm run start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "cd .. && husky install web/.husky && husky install mobile/.husky && husky install server/.husky",
    "lint-web": "lint-staged",
    "lint-mobile": "lint-staged",
    "lint-server": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx, jsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,md,html,js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/Rangyia/mailocity.git"
  },
  "keywords": [
    "Email",
    "Mail",
    "Client",
    "Mobile"
  ],
  "author": "Jess Graham",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/Rangyia/mailocity/issues"
  },
  "homepage": "https://gitlab.com/Rangyia/mailocity#readme",
  "devDependencies": {
    "husky": "^7.0.4"
  }
}
